<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/question_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView android:id="@+id/question_text"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            />

        <TextView android:id="@+id/label_answer"
            android:text="@string/answer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/question_text"
            />

        <TextView android:id="@+id/link_now"
            android:text="@string/right_now"
            android:textSize="15sp"
            android:clickable="true"
            android:onClick="onAnswerNow"
            android:autoLink="web"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/label_answer"
            android:layout_toEndOf="@+id/label_answer"
            android:layout_alignBottom="@id/label_answer"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            />

        <TextView android:id="@+id/label_or"
            android:text="@string/or"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/link_now"
            android:layout_toEndOf="@+id/link_now"
            android:layout_alignBottom="@+id/link_now"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            />

        <TextView android:id="@+id/setup_repeat"
            android:textSize="15sp"
            android:clickable="true"
            android:onClick="onSetUp"
            android:autoLink="web"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/label_answer"
            />

        <Switch android:id="@+id/switchOnOff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:onClick=""/>

    </RelativeLayout>
</android.support.v7.widget.CardView>